<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Isbn</th>
      <th>Summary</th>
      <th>Acquired</th>
      <th>Condition</th>
      <th>Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= book.summary %></td>
        <td><%= book.acquired %></td>
        <td><%= book.condition %></td>
        <td><%= book.keywords %></td>
        <td><%= link_to 'Show', item_path( book.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

